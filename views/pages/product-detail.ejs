<!-- Product Detail -->
<section class="py-12 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <div class="flex flex-col lg:flex-row gap-10">
        <!-- Product Image -->
        <div class="lg:w-1/2" data-aos="fade-right">
          <div class="bg-gray-50 rounded-2xl p-8 h-[400px] flex items-center justify-center overflow-hidden">
            <img src="<%= product.image %>" alt="<%= product.name %>" class="max-h-full object-contain animate-float" loading="lazy">
          </div>
        </div>
        
        <!-- Product Info -->
        <div class="lg:w-1/2" data-aos="fade-left">
          <div class="mb-2">
            <span class="inline-block px-3 py-1 rounded-full text-xs font-medium bg-primary-100 text-primary-800">
              <%= product.category.charAt(0).toUpperCase() + product.category.slice(1) %>
            </span>
          </div>
          
          <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
            <%= product.name %>
          </h1>
          
          <div class="text-2xl font-bold text-primary-600 mb-6">
            â‚¹<%= product.price.toFixed(2) %>
          </div>
          
          <div class="prose max-w-none mb-8">
            <p class="text-gray-600">
              <%= product.description %>
            </p>
          </div>
          
          <div class="space-y-6">
            <div class="flex flex-wrap gap-4">
              <button class="btn-primary flex items-center" 
                data-name="<%= product.name %>"
                data-price="<%= product.price.toFixed(2) %>"
                data-whatsapp="<%= contactInfo.whatsapp %>">
                <i class="fab fa-whatsapp mr-2"></i>
                Order via WhatsApp
              </button>
              
              <a href="/products" class="btn-outline">
                Continue Shopping
              </a>
            </div>
            
            <div class="flex items-center text-gray-500 text-sm">
              <i class="fas fa-shield-alt mr-2"></i>
              <span>Safe and Secure Checkout</span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Product Features -->
      <div class="mt-16" data-aos="fade-up">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Product Features</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="p-6 bg-gray-50 rounded-xl">
            <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center mb-4">
              <i class="fas fa-check text-primary-500"></i>
            </div>
            <h3 class="font-bold text-lg mb-2">High Quality</h3>
            <p class="text-gray-600">Made with premium materials for durability and safety.</p>
          </div>
          
          <div class="p-6 bg-gray-50 rounded-xl">
            <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center mb-4">
              <i class="fas fa-star text-primary-500"></i>
            </div>
            <h3 class="font-bold text-lg mb-2">Kid-Friendly</h3>
            <p class="text-gray-600">Designed specifically for children with fun and educational elements.</p>
          </div>
          
          <div class="p-6 bg-gray-50 rounded-xl">
            <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center mb-4">
              <i class="fas fa-heart text-primary-500"></i>
            </div>
            <h3 class="font-bold text-lg mb-2">Loved by Kids</h3>
            <p class="text-gray-600">Children love our products for their engaging and fun designs.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

