<div class="min-h-screen flex items-center justify-center py-12 bg-gray-50">
  <div class="max-w-md w-full text-center" data-aos="fade-up">
    <div class="text-red-500 mb-6">
      <i class="fas fa-exclamation-triangle text-7xl"></i>
    </div>
    
    <h1 class="text-4xl font-bold text-gray-800 mb-4">Something Went Wrong</h1>
    
    <p class="text-lg text-gray-600 mb-8">
      <%= error %>
    </p>
    
    <div class="space-y-4">
      <a href="/" class="btn-primary inline-block">
        <i class="fas fa-home mr-2"></i>
        Back to Home
      </a>
      
      <div class="pt-4 text-sm text-gray-500">
        <p>If this problem persists, please <a href="/contact" class="text-primary-500 hover:underline">contact us</a>.</p>
      </div>
    </div>
  </div>
</div>