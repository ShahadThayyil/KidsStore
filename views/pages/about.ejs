<!-- About Banner -->
<section class="py-12 bg-primary-50">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center" data-aos="fade-up">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4">
        <%= about.title %>
      </h1>
    </div>
  </div>
</section>

<!-- About Content -->
<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <div class="prose max-w-none" data-aos="fade-up">
        <p class="text-lg text-gray-600 leading-relaxed mb-8">
          <%= about.content %>
        </p>
        
        <div class="grid md:grid-cols-2 gap-8 mb-12">
          <div class="bg-primary-50 p-8 rounded-2xl" data-aos="fade-right">
            <h2 class="text-2xl font-bold text-gray-800 mb-4">Our Mission</h2>
            <p class="text-gray-600">
              <%= about.mission %>
            </p>
          </div>
          
          <div class="bg-secondary-50 p-8 rounded-2xl" data-aos="fade-left">
            <h2 class="text-2xl font-bold text-gray-800 mb-4">Our Vision</h2>
            <p class="text-gray-600">
              <%= about.vision %>
            </p>
          </div>
        </div>
      </div>
      
      <!-- Values -->
      <div class="mt-12" data-aos="fade-up">
        <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">Our Values</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="text-center p-6" data-aos="fade-up" data-aos-delay="100">
            <div class="w-16 h-16 rounded-full bg-primary-100 flex items-center justify-center mx-auto mb-4">
              <i class="fas fa-shield-alt text-2xl text-primary-500"></i>
            </div>
            <h3 class="text-xl font-bold mb-2">Safety</h3>
            <p class="text-gray-600">All our products are designed with children's safety as the top priority.</p>
          </div>
          
          <div class="text-center p-6" data-aos="fade-up" data-aos-delay="200">
            <div class="w-16 h-16 rounded-full bg-secondary-100 flex items-center justify-center mx-auto mb-4">
              <i class="fas fa-graduation-cap text-2xl text-secondary-500"></i>
            </div>
            <h3 class="text-xl font-bold mb-2">Education</h3>
            <p class="text-gray-600">We believe in the power of play to educate and inspire young minds.</p>
          </div>
          
          <div class="text-center p-6" data-aos="fade-up" data-aos-delay="300">
            <div class="w-16 h-16 rounded-full bg-accent-100 flex items-center justify-center mx-auto mb-4">
              <i class="fas fa-smile text-2xl text-accent-500"></i>
            </div>
            <h3 class="text-xl font-bold mb-2">Fun</h3>
            <p class="text-gray-600">We create products that bring joy and excitement to children's lives.</p>
          </div>
        </div>
      </div>
      
      <!-- Team -->
      <div class="mt-20" data-aos="fade-up">
        <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">Our Team</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center" data-aos="fade-up" data-aos-delay="100">
            <div class="w-32 h-32 rounded-full bg-gray-200 mx-auto mb-4 overflow-hidden">
              <img src="https://images.pexels.com/photos/1181686/pexels-photo-1181686.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" alt="Team Member" class="w-full h-full object-cover">
            </div>
            <h3 class="text-xl font-bold mb-1">Sarah Johnson</h3>
            <p class="text-primary-500 mb-3">Founder & CEO</p>
            <p class="text-gray-600">Passionate about creating safe and educational toys for children.</p>
          </div>
          
          <div class="text-center" data-aos="fade-up" data-aos-delay="200">
            <div class="w-32 h-32 rounded-full bg-gray-200 mx-auto mb-4 overflow-hidden">
              <img src="https://images.pexels.com/photos/3785104/pexels-photo-3785104.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" alt="Team Member" class="w-full h-full object-cover">
            </div>
            <h3 class="text-xl font-bold mb-1">David Kim</h3>
            <p class="text-primary-500 mb-3">Product Designer</p>
            <p class="text-gray-600">Expert in designing innovative and engaging products for kids.</p>
          </div>
          
          <div class="text-center" data-aos="fade-up" data-aos-delay="300">
            <div class="w-32 h-32 rounded-full bg-gray-200 mx-auto mb-4 overflow-hidden">
              <img src="https://images.pexels.com/photos/2379004/pexels-photo-2379004.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" alt="Team Member" class="w-full h-full object-cover">
            </div>
            <h3 class="text-xl font-bold mb-1">Emily Martinez</h3>
            <p class="text-primary-500 mb-3">Quality Assurance</p>
            <p class="text-gray-600">Ensures all products meet the highest quality and safety standards.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- CTA Section -->
<section class="py-16 bg-primary-50">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center" data-aos="fade-up">
      <h2 class="text-3xl font-bold text-gray-800 mb-4">Discover Our Products</h2>
      <p class="text-lg text-gray-600 mb-8">
        Take a look at our collection of high-quality products designed for children.
      </p>
      <a href="/products" class="btn-primary">
        Shop Now
        <i class="fas fa-arrow-right ml-2"></i>
      </a>
    </div>
  </div>
</section>